<%= search_form_for @q, :class => collapse_search_form, :id => "activities_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :image_cont, "Image contains" %>
    <%= f.text_field :image_cont, :class => "form-control", :placeholder => "Image contains" %>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :time_of_day_cont, "Time of day contains" %>
    <%= f.text_field :time_of_day_cont, :class => "form-control", :placeholder => "Time of day contains" %>
  </div>

  <div class="form-group">
    <%= f.label :day, "Day" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='daygteqPicker' data-target-input="nearest">
          <%= f.text_field :day_gteq, :class => "form-control datetimepicker-input", :placeholder => "Day greater than or equal to", :data => {:target => '#daygteqPicker'} %>
          <div class="input-group-append" data-target='#daygteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='daylteqPicker' data-target-input="nearest">
          <%= f.text_field :day_lteq, :class => "form-control datetimepicker-input", :placeholder => "Day less than or equal to", :data => {:target => '#daylteqPicker'} %>
          <div class="input-group-append" data-target='#daylteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#daygteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#daylteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#daygteqPicker').on("dp.change", function (e) {
              $('#daylteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#daylteqPicker').on("dp.change", function (e) {
              $('#daygteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :trip_name_cont, "Trip name contains" %>
    <%= f.text_field :trip_name_cont, :class => "form-control", :placeholder => "Trip name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :planner_first_name_cont, "Planner first_name contains" %>
    <%= f.text_field :planner_first_name_cont, :class => "form-control", :placeholder => "Planner first_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/activities" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#activities_filters">
  Show filters
</a>
