<% was_validated = activity.errors.any? %>

<%= form_with(model: activity, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% trip_class = "form-control" %>
    <% trip_was_invalid = activity.errors.include?(:trip) %>

    <% if was_validated %>
      <% if trip_was_invalid %>
        <% trip_class << " is-invalid" %>
      <% else %>
        <% trip_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :trip_id %>
    <%= f.collection_select :trip_id, Trip.all, :id, :to_s, {}, class: "form-control" %>
    <% if trip_was_invalid %>
      <% activity.errors.full_messages_for(:trip).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = activity.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% activity.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% day_class = "form-control" %>
    <% day_was_invalid = activity.errors.include?(:day) %>

    <% if was_validated %>
      <% if day_was_invalid %>
        <% day_class << " is-invalid" %>
      <% else %>
        <% day_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :day %>
    <%= f.date_select :day, class: day_class, placeholder: "Enter day" %>
    <% if day_was_invalid %>
      <% activity.errors.full_messages_for(:day).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% time_of_day_class = "form-control" %>
    <% time_of_day_was_invalid = activity.errors.include?(:time_of_day) %>

    <% if was_validated %>
      <% if time_of_day_was_invalid %>
        <% time_of_day_class << " is-invalid" %>
      <% else %>
        <% time_of_day_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :time_of_day %>
    <%= f.text_field :time_of_day, class: time_of_day_class, placeholder: "Enter time of day" %>
    <% if time_of_day_was_invalid %>
      <% activity.errors.full_messages_for(:time_of_day).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = activity.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% activity.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = activity.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.text_field :image, class: image_class, placeholder: "Enter image" %>
    <% if image_was_invalid %>
      <% activity.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
