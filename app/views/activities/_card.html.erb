<div class="card mb-3">
  <h2 class="card-header h4">
    Activity #<%= activity.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Trip</dt>
      <dd>
        <% if @activity.trip.present? %>
          <%= link_to activity.trip, activity.trip %>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= activity.name %></dd>

      <dt>Day</dt>
      <dd><%= activity.day %></dd>

      <dt>Time of day</dt>
      <dd><%= activity.time_of_day %></dd>

      <dt>Description</dt>
      <dd><%= activity.description %></dd>

      <dt>Image</dt>
      <dd><%= activity.image %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back activity, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_activity_url(activity), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to activity, method: :delete, data: { confirm: "Do you really want to delete this activity?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(activity.updated_at) %> ago
  </div>
</div>
