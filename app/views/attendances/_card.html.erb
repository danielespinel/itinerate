<div class="card mb-3">
  <h2 class="card-header h4">
    Attendance #<%= attendance.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Trip</dt>
      <dd>
        <% if @attendance.trip.present? %>
          <%= link_to attendance.trip, attendance.trip %>
        <% end %>
      </dd>

      <dt>Attendee</dt>
      <dd>
        <% if @attendance.attendee.present? %>
          <%= link_to attendance.attendee, attendance.attendee %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back attendance, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_attendance_url(attendance), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to attendance, method: :delete, data: { confirm: "Do you really want to delete this attendance?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(attendance.updated_at) %> ago
  </div>
</div>
