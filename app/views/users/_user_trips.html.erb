<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Trips

    <a data-toggle="collapse" href="#user_trips_new_form">
      Add trip
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.trips.each do |trip| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to trip, trip %>

        <%= link_to trip, method: :delete, data: { confirm: "Do you really want to delete this trip" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_trips_new_form">
        <%= render partial: "users/user_trips_new_form" %>
      </div>
    </div>

  </ul>
</div>
