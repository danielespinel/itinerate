<!-- Form invitation start -->
<%= form_with(model: @invitation, local: true) do |f| %>
<!-- Form invitation end -->

  <!-- Label and input for invited_user_id start -->
  <!-- Input for invited_user_id start -->
  <%= f.hidden_field :invited_user_id, value: @user.id %>
  <!-- Input for invited_user_id end -->
  <!-- Label and input for invited_user_id end -->

  <!-- Label and input for trip_id start -->
  <div class="form-group">
    <%= f.label :trip_id %>

    <!-- Input for trip_id start -->
    <%= f.collection_select :trip_id, Trip.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for trip_id end -->
  </div>
  <!-- Label and input for trip_id end -->

  <%= f.submit "Create invitation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
