<%= form_with(model: @invitation, local: true) do |f| %>

  <%= f.hidden_field :invited_user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :trip_id %>

    <%= f.collection_select :trip_id, Trip.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create invitation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
