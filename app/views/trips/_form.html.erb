<% was_validated = trip.errors.any? %>

<%= form_with(model: trip, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for start_date start -->
  <div class="form-group">
    <% start_date_class = "form-control" %>
    <% start_date_was_invalid = trip.errors.include?(:start_date) %>

    <% if was_validated %>
      <% if start_date_was_invalid %>
        <% start_date_class << " is-invalid" %>
      <% else %>
        <% start_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :start_date %>
    <!-- Input for start_date start -->
    <%= f.date_select :start_date, class: start_date_class, placeholder: "Enter start date" %>
    <!-- Input for start_date end -->
    <% if start_date_was_invalid %>
      <% trip.errors.full_messages_for(:start_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for start_date end -->
  <!-- Label and input for end_date start -->
  <div class="form-group">
    <% end_date_class = "form-control" %>
    <% end_date_was_invalid = trip.errors.include?(:end_date) %>

    <% if was_validated %>
      <% if end_date_was_invalid %>
        <% end_date_class << " is-invalid" %>
      <% else %>
        <% end_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :end_date %>
    <!-- Input for end_date start -->
    <%= f.text_field :end_date, class: end_date_class, placeholder: "Enter end date" %>
    <!-- Input for end_date end -->
    <% if end_date_was_invalid %>
      <% trip.errors.full_messages_for(:end_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for end_date end -->
  <!-- Label and input for location start -->
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = trip.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <!-- Input for location start -->
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <!-- Input for location end -->
    <% if location_was_invalid %>
      <% trip.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for location end -->
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = trip.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% trip.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for image start -->
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = trip.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <!-- Input for image start -->
    <%= f.text_field :image, class: image_class, placeholder: "Enter image" %>
    <!-- Input for image end -->
    <% if image_was_invalid %>
      <% trip.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for image end -->
  <!-- Label and input for planner_id start -->
  <div class="form-group">
    <% planner_class = "form-control" %>
    <% planner_was_invalid = trip.errors.include?(:planner) %>

    <% if was_validated %>
      <% if planner_was_invalid %>
        <% planner_class << " is-invalid" %>
      <% else %>
        <% planner_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :planner_id %>
    <!-- Input for planner_id start -->
    <%= f.number_field :planner_id, class: planner_class, placeholder: "Enter planner" %>
    <!-- Input for planner_id end -->
    <% if planner_was_invalid %>
      <% trip.errors.full_messages_for(:planner).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for planner_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
