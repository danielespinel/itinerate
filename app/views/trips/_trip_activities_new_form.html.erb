<!-- Form activity start -->
<%= form_with(model: @activity, local: true) do |f| %>
<!-- Form activity end -->

  <!-- Label and input for trip_id start -->
  <!-- Input for trip_id start -->
  <%= f.hidden_field :trip_id, value: @trip.id %>
  <!-- Input for trip_id end -->
  <!-- Label and input for trip_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <%= f.label :name %>

    <!-- Input for name start -->
    <%= f.text_field :name, class: "form-control" %>
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for day start -->
  <div class="form-group">
    <%= f.label :day %>

    <!-- Input for day start -->
    <%= f.date_select :day, class: "form-control" %>
    <!-- Input for day end -->
  </div>
  <!-- Label and input for day end -->

  <!-- Label and input for time_of_day start -->
  <div class="form-group">
    <%= f.label :time_of_day %>

    <!-- Input for time_of_day start -->
    <%= f.text_field :time_of_day, class: "form-control" %>
    <!-- Input for time_of_day end -->
  </div>
  <!-- Label and input for time_of_day end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.text_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <%= f.submit "Create activity", class: "btn btn-block btn-outline-secondary" %>
<% end %>
