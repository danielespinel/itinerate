<%= form_with(model: @activity, local: true) do |f| %>

  <%= f.hidden_field :trip_id, value: @trip.id %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :day %>

    <%= f.date_select :day, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time_of_day %>

    <%= f.text_field :time_of_day, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.text_field :image, class: "form-control" %>
  </div>

  <%= f.submit "Create activity", class: "btn btn-block btn-outline-secondary" %>
<% end %>
