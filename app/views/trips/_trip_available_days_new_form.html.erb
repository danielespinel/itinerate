<%= form_with(model: @available_day, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :day %>
    <%= f.datetime_select :day, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :day_name %>

    <%= f.text_field :day_name, class: "form-control" %>
  </div>

  <%= f.hidden_field :trip_id, value: @trip.id %>

  <%= f.submit "Create available day", class: "btn btn-block btn-outline-secondary" %>
<% end %>
